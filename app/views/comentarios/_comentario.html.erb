<div id="<%= dom_id comentario %>">
  <p>
    <strong>Title:</strong>
    <%= comentario.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= comentario.content %>
  </p>

  <p>
    <strong>Files:</strong>
    <% comentario.files.each do |file| %>
      <div><%= link_to file.filename, file %></div>
    <% end %>
  </p>

</div>
